<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" />

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/card" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/map_view" >
            <Transform
                android:translationX="-500dp"/>
        </Constraint>

        <Constraint android:id="@+id/right">
            <PropertySet android:alpha="0"/>
        </Constraint>

        <Constraint android:id="@+id/toggleGroup">
            <PropertySet android:alpha="1"/>
        </Constraint>


        <Constraint android:id="@+id/saveButton">
            <PropertySet android:alpha="1"/>
        </Constraint>

        <Constraint android:id="@+id/phoneNumber">
            <PropertySet android:alpha="1"/>
        </Constraint>

        <Constraint android:id="@+id/header">
            <Transform
                android:translationX="-500dp"/>
        </Constraint>

        <Constraint android:id="@+id/newPlace">
            <PropertySet
                android:alpha="0"/>
        </Constraint>

        <Constraint android:id="@+id/card2">
            <Transform
                android:translationX="0dp"/>
            <PropertySet
                android:alpha="1"/>
        </Constraint>

        <Constraint android:id="@+id/header2">
            <Transform
                android:translationX="0dp">
            </Transform>
            <PropertySet
                android:alpha="1"/>
        </Constraint>

        <Constraint android:id="@+id/left">
            <PropertySet android:alpha="1"/>
        </Constraint>


    </ConstraintSet>

</MotionScene>
