<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryDark">@color/smoked_green</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="customRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>
    <style name="customSpinnerRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_spinner_ratingbar</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>
    <style name = "Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/smoked_green</item>
    </style>
</resources>